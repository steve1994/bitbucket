<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.steve.tessuitmediaandroid.MainMenuActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama   :"
        android:id="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textSize="21dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/nameView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameView"
        android:text="nama saya"
        android:textSize="21dp"
        android:layout_marginTop="92dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/pilihEventButton"
        android:layout_toEndOf="@+id/pilihEventButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pilih event"
        android:id="@+id/pilihEventButton"
        android:onClick="onPilihEventButtonClick"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pilih guest"
        android:id="@+id/pilihGuestButton"
        android:onClick="onPilihGuestButtonClick"
        android:layout_below="@+id/pilihEventButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
